<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2a475e"
    tools:context=".Activities.NewItemToObserveActivity">

    <TextView
        android:id="@+id/pageTitleTV"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#1b2838"
        android:gravity="center_vertical"
        android:text="Search Item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:translationZ="1dp">
    </TextView>

    <TextView
        android:id="@+id/resultsCountTV"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="no results."
        android:layout_width="0dp"
        android:layout_height="0dp">
    </TextView>

    <EditText
        android:id="@+id/itemNameET"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@drawable/search_edittext"
        android:textCursorDrawable="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp">
    </EditText>

    <ImageButton
        android:id="@+id/searchIB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@android:drawable/ic_menu_search"
        android:background="#596c85"
        android:translationZ="1dp">
    </ImageButton>

    <ScrollView
        android:id="@+id/searchedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/searchedItemsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>